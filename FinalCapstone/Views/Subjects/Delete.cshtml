@model FinalCapstone.Subject

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Are you sure you want to delete this <b>Subject?</b></h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Course Number
        </dt>

        <dd style="font-size:30px; color:black">
            <b> @Html.DisplayFor(model => model.Course.courseno)</b>
        </dd>
        <dt>
           Course
        </dt>
        <dd style="font-size:30px; color:black">
            <b>  @Html.DisplayFor(model => model.Course.coursetitle)</b>
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
