@model IEnumerable<FinalCapstone.Rubric>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = @ViewBag.CourseId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.outputs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.courseno)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.outputs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.courseno)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.rubric_id, courseid = item.course_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.rubric_id, courseid = item.course_id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Back to List", "Index", "Subjects")
