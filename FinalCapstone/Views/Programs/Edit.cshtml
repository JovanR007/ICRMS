@model FinalCapstone.Program

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Edit a Program</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.program_id)

    <div class="form-group">
        @Html.LabelFor(model => model.program1, "Program", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <h1 style="font-size:30px; color:black">
                @Html.DisplayFor(model => model.program1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.program1, "", new { @class = "text-danger" })
            </h1>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.program_title, "Program Title", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.program_title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.program_title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.program_description, "Program Description", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.program_description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.program_description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
