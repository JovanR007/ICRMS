@model FinalCapstone.Program

@{
    ViewBag.Title = "Create";
}






    <div class="form-horizontal">
        <h4>Create a new Program</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.program1, "Program", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.program1, new { htmlAttributes = new { @class = "form-control", @id = "program1" } })
                @Html.ValidationMessageFor(model => model.program1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.program_title, "Program Title", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.program_title, new { htmlAttributes = new { @class = "form-control", @id = "program_title" } })
                @Html.ValidationMessageFor(model => model.program_title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.program_description, "Program", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.program_description, new { htmlAttributes = new { @class = "form-control", @id = "program_description" } })
                @Html.ValidationMessageFor(model => model.program_description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" id="createbtn" />
            </div>
        </div>
    </div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/Scripts/json2.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {

        $(document).on('click', '#createbtn', function () {

            $.ajax({
                type: "POST",
                url: '/Programs/Create',
                type: "post",
                dataType: 'json',
                data: {
                    'program1': $('#program1').val(), 'program_title': $('#program_title').val(), 'program_description': $('#program_description').val()
                },
                success: function (datax) {
                    if (datax.status == 1) {
                        alert(datax.message);
                    }
                    else {
                        alert(datax.message);
                    }
                }
            });


        })
    })
</script>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


